{% extends "::base.html.twig" %}

{% block title %}ReviewerReviewBundle:review:view{% endblock %}

{% block body %}
    <article class="col-md-6">
        <p>{{ review.summaryReview }} </p>
        <p> {{ review.fullReview }}</p>
        <h1>{{ review.rating | rating(5, "fa-3x") }}</h1>
        <p>
            <small>Created by {{ review.author }} at
                {{ review.timestamp|date('H:i d/m/y') }}
            </small>
            {#{{ form(form) }}#}
            {#<a href="{{ path('edit',{'id':review.id}) }}">edit</a>#}

        </p>
    </article>
{% endblock %}